<% provide :title, "Events" %>

<% if @todays_event.any? %>
  <h1>Today's Event</h1>

  <div class='todays-events'>
    <%= render @todays_event %>
  </div>

<% end %>


<% if @future_events.any? %>
  <h1>Upcoming <%= 'Event'.pluralize(@future_events.count) %></h1>

  <div class='future-events'>
    <%= render @future_events.reverse %>
  </div>
<% end %>

<h1>Past Events</h1>

<div class='past-events'>
  <%= render @past_events %>
</div>
