<% provide :title, 'Jobs' %>
<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<% @jobs.each do |job| %>
  <div class="card">
    <h2><%= link_to render_markdown_as_html(job.title), job_path(job) %></h2>
    <p class="job-meta">
      <% if job.organization %>
        <%= icon 'building', class: 'fa-fw' %><%= render_markdown_as_html job.organization.name  %><br/>
      <% end %>
      <%= icon 'calendar-o', class: 'fa-fw' %>Posted <%= time_ago_in_words(job.created_at) %> ago
    </p>
    <div class="markdown-body">
      <%= render_markdown_as_html job.description %>
    </div>
  </div>
<% end %>
