<% provide :title, 'Jobs' %>
<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<% @jobs.each do |job| %>
  <div class="card">
    <h2><%= link_to job.title, job_path(job) %></h2>
    <p class="meta">
      Posted <%= time_ago_in_words(job.created_at) %> ago
    </p>
    <div class="markdown-body">
      <%= render_markdown_as_html job.description %>
    </div>
  </div>
<% end %>
