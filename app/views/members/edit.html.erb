<% provide :title, 'Edit profile' %>
<h1>Edit profile</h1>

<div class="card">
  <%= form_for @member, class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <h2>Public profile</h2>
    </div>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :name, class: "form-control" %>
        <p class="help-block"><span class='text-danger'><%= @member.errors.full_messages_for(:name).to_sentence %></span></p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :company, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :company, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control" %>
        <p class="help-block"><span class='text-danger'><%= @member.errors.full_messages_for(:email).to_sentence %></span></p>
        <p class="help-block">This is the email you want to show publicly. Changing it won't change your login email.</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :picture, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :picture, class: "form-control", placeholder: 'http://' %>
        <p class="help-block">Leave this blank to use Gravatar, with your public email.</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :twitter_handle, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :twitter_handle, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :github_handle, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :github_handle, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :website, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :website, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :biography, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_area :biography, class: "form-control" %>
      </div>
    </div>

    <%= f.button "Save my profile", class: 'btn btn-primary' %>

  <% end %>
  <div class='clearfix'></div>
</div>
