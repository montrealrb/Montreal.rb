<header>
  <nav class="navbar">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <%= icon('bars', class: 'fa-2x') %>
        </button>

        <%= link_to root_path do %>
          <h1>Montreal.rb</h1>
          <p class="hidden-sm hidden-xs">Montreal's Ruby Community</p>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home', root_path %></li>
          <% if Job.published.any? %>
            <li><%= link_to 'Jobs', jobs_path %></li>
          <% end %>
          <li><%= link_to 'About', about_path %></li>
          <% if Event.published.any? %>
            <li><%= link_to 'Events', events_path %></li>
          <% end %>
          <% if NewsItem.published.any? %>
            <li><%= link_to 'News', news_items_path %></li>
          <% end %>
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user"></span>
                <%= current_user.email %>
                <span class="glyphicon glyphicon-chevron-down"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <div class="navbar-login">
                    <div class="row">
                      <div class="col-lg-4">
                        <%= gravatar_for(current_user.member, size: 87, html: {}) %>
                      </div>
                      <div class="col-lg-8">
                        <p class="text-left"><strong><%= current_user.member&.name %></strong></p>
                        <p class="text-left small"><%= current_user.email %></p>
                        <p class="text-left">
                          <a href="#" class="btn btn-primary btn-block btn-sm">Edit Profile</a>
                        </p>
                      </div>
                    </div>
                  </div>
                </li>
                <li class="divider"></li>
                <li>
                  <div class="navbar-login navbar-login-session">
                    <div class="row">
                      <div class="col-lg-12">
                        <%= link_to 'Admin Area', admin_root_path, target: "_blank", class:"btn btn-info btn-block" if current_user.admin? %>
                        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:"btn btn-danger btn-block" %>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Log in', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
